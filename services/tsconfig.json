{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "rootDir": ".",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["src/**/*.ts", "auth-service/src/**/*.ts", "user-service/src/**/*.ts", "notification-service/src/**/*.ts", "api/src/**/*.ts", "types/**/*.d.ts"]
  }
  